{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch", // 설정 이름
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/x86_example/cal", // 실행 파일 경로
            "args": ["1", "2", "add"], // <--- 이곳에 인자를 넣습니다.
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}